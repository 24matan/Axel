<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.xgouchet.xmleditor"
    android:versionCode="4"
    android:versionName="1.4" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AxelApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name_full"
        android:theme="@style/Axel" >

        <!-- Axel main activity -->
        <activity
            android:name=".AxelActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >

            <!-- Launcher Intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Default Text file view / edit -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/xml" />
                <data android:mimeType="text/html" />
            </intent-filter>

            <!-- File not recognized as Text Files by Android -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host=""
                    android:pathPattern=".*\\.htm"
                    android:scheme="file" />
                <data
                    android:host=""
                    android:pathPattern=".*\\.html"
                    android:scheme="file" />
                <data
                    android:host=""
                    android:pathPattern=".*\\.xhtml"
                    android:scheme="file" />
                <data
                    android:host=""
                    android:pathPattern=".*\\.xml"
                    android:scheme="file" />
                <data
                    android:host=""
                    android:pathPattern=".*\\.xsd"
                    android:scheme="file" />
            </intent-filter>
        </activity>

        <!-- Axel Edit Node activity -->
        <activity
            android:name=".AxelNodeEditorActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
            android:label="@string/title_editor"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- Axel Edit Node activity -->
        <activity
            android:name=".AxelSortActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
            android:label="@string/title_editor"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted settings activity -->
        <activity
            android:name=".AxelSettingsActivity"
            android:label="@string/title_settings"
            android:theme="@style/Axel.Dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted save as activity -->
        <activity
            android:name=".AxelSaveAsActivity"
            android:label="@string/title_save_as"
            android:theme="@style/Axel.Dark"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <!-- Ted open activity -->
        <activity
            android:name=".AxelOpenActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
            android:theme="@style/Axel.Dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted open recent activity -->
        <activity
            android:name=".AxelOpenRecentActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
            android:label="@string/title_open_recent"
            android:theme="@style/Axel.Dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted open template activity -->
        <activity
            android:name=".AxelOpenTemplateActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
            android:label="@string/title_open_template"
            android:theme="@style/Axel.Dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>

        <!-- Ted about activity -->
        <activity
            android:name=".AxelAboutActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|fontScale|screenSize|smallestScreenSize"
            android:label="@string/title_about"
            android:theme="@style/Axel.Dark"
            android:windowSoftInputMode="stateHidden" >
        </activity>
    </application>

</manifest>